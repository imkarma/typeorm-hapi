{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true
  },
  "include": [
    "src/**/**.ts",
    "test/**/**.ts",
    "node_modules/@types"
  ],
  "exclude": [
    "node_modules"
  ]
}